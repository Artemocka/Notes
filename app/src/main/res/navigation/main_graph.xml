<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_graph"
    app:startDestination="@id/mainFragment"
    >
    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.myapplication.screens.home.HomeFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_home"
        >
        <action
            android:id="@+id/actionEdit"
            app:destination="@id/editNoteFragment"
            app:enterAnim="@anim/fragment_enter"
            app:exitAnim="@anim/fragment_exit"
            app:popEnterAnim="@anim/fragment_enter_scale"
            app:popExitAnim="@anim/fragment_exit_scale"
            />
        <action
            android:id="@+id/actionCreate"
            app:destination="@id/editNoteFragment"
            >
            <argument
                android:name="id"
                android:defaultValue="-1"
                />
        </action>
    </fragment>
    <fragment
        android:id="@+id/createNoteFragment"
        android:name="com.example.myapplication.screens.create.CreateNoteFragment"
        android:label="fragment_create_note"
        tools:layout="@layout/fragment_create_note"
        />
    <argument
        android:name="id"
        app:argType="integer"
        />
    <fragment
        android:id="@+id/editNoteFragment"
        android:name="com.example.myapplication.screens.edit.EditNoteFragment"
        android:label="EditNoteFragment"
        >
        <argument
            android:name="id"
            app:argType="integer"
            />
    </fragment>
</navigation>